{
  "$schema": "node_modules/renovate/renovate-schema.json",
  "timezone": "Europe/Paris",
  "assignees": ["benjamin-viellard-acocia-agaps"],
  "extends": [
    "config:best-practices"
  ],
  "separateMultipleMajor": true,
  "prHourlyLimit": 4,
  "branchPrefix": "deps/",
  "addLabels": [
    "dependencies"
  ],
  "major": {
    "addLabels": [
      "dependencies",
      "major"
    ]
  },
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com",
      "token": "{{ secrets.GITHUB_TOKEN }}"
    },
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "acocia-agaps",
      "password": "{{ secrets.GITHUB_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "groupName": "Iconify",
      "matchPackageNames": [
        "@iconify-json/**"
      ]
    },
    {
      "groupName": "Directus",
      "matchPackageNames": [
        "directus",
        "@directus/**"
      ]
    }
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  }
}
